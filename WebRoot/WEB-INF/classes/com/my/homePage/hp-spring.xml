<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd"
	xmlns:tx="http://www.springframework.org/schema/tx">

	<bean id="homeDao" class="com.my.homePage.HomeDao">
		<property name="factory" ref="sessionFactory"></property>
	</bean>

	<bean id="homeService" class="com.my.homePage.HomeService">
		<property name="dao" ref="homeDao"></property>
	</bean>
	
	<bean id="homeAction" class="com.my.homePage.HomeAction">
		<property name="service" ref="homeService"></property>
	</bean>
</beans>